<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorline" />
    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_hight"
        android:background="@color/base_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_tab0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_tab0"
                    android:layout_width="@dimen/tab_img_width"
                    android:layout_height="@dimen/tab_img_height"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/icon_home_pressed" />

                <TextView
                    android:id="@+id/tv_tab0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_tab0"
                    android:text="@string/tab0"
                    android:textColor="@color/tab_text_color_pressed"
                    android:textSize="@dimen/tab_text_size" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_tab1"
                    android:layout_width="@dimen/tab_img_width"
                    android:layout_height="@dimen/tab_img_height"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/icon_health_normal" />

                <TextView
                    android:id="@+id/tv_tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_tab1"
                    android:text="@string/tab1"
                    android:textColor="@color/tab_text_color_normal"
                    android:textSize="@dimen/tab_text_size" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_tab2"
                    android:layout_width="@dimen/tab_img_width"
                    android:layout_height="@dimen/tab_img_height"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/icon_msg_normal" />

                <TextView
                    android:id="@+id/tv_tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_tab2"
                    android:text="@string/tab2"
                    android:textColor="@color/tab_text_color_normal"
                    android:textSize="@dimen/tab_text_size" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_tab3"
                    android:layout_width="@dimen/tab_img_width"
                    android:layout_height="@dimen/tab_img_height"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/icon_user_normal" />

                <TextView
                    android:id="@+id/tv_tab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_tab3"
                    android:text="@string/tab3"
                    android:textColor="@color/tab_text_color_normal"
                    android:textSize="@dimen/tab_text_size" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
